# -----------------------------------------------------------------------------
# Database (internal Postgres container credentials)
# -----------------------------------------------------------------------------
POSTGRES_USER=prediction
POSTGRES_PASSWORD=replace-with-strong-password
POSTGRES_DB=prediction_platform

# Full Prisma URL used by API (must match db credentials above)
DATABASE_URL=postgresql://prediction:replace-with-strong-password@db:5432/prediction_platform?schema=public

# -----------------------------------------------------------------------------
# API
# -----------------------------------------------------------------------------
NODE_ENV=production
PORT=3000
TRUST_PROXY=1
FRONTEND_URL=https://your-domain.example
JWT_SECRET=replace-with-a-long-random-secret-at-least-32-chars
JWT_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=12

# -----------------------------------------------------------------------------
# Platform rules
# -----------------------------------------------------------------------------
SIGNUP_BONUS_TOKENS=5
DAILY_ALLOWANCE_TOKENS=5
MAX_ALLOWANCE_TOKENS=35
MIN_STAKE_AMOUNT=1
MAX_STAKE_AMOUNT=35
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MINUTES=15

# -----------------------------------------------------------------------------
# Odds provider
# -----------------------------------------------------------------------------
THE_ODDS_API_KEY=replace-with-real-key
THE_ODDS_API_BASE_URL=https://api.the-odds-api.com/v4
THE_ODDS_API_REGIONS=uk
THE_ODDS_API_MARKETS=h2h
ODDS_SYNC_INTERVAL_SECONDS=300
SETTLEMENT_INTERVAL_SECONDS=300

# -----------------------------------------------------------------------------
# Frontend container
# -----------------------------------------------------------------------------
FRONTEND_PORT=80
VITE_API_URL=/api
